# ST0CK Enhanced Environment Configuration
# Copy this to .env and fill in your values

# --- Trading Mode ---
IS_PAPER_TRADING=true

# --- ST0CK API Credentials ---
# For ST0CKA strategy
ST0CKAKEY=your_alpaca_api_key_here
ST0CKASECRET=your_alpaca_secret_key_here

# For ST0CKG strategy  
ST0CKGKEY=your_alpaca_api_key_here
ST0CKGSECRET=your_alpaca_secret_key_here

# Fallback credentials (used if above not set)
TRADING_API_KEY=your_alpaca_api_key_here
TRADING_API_SECRET=your_alpaca_secret_key_here

# --- Strategy Configuration ---
# Options: st0cka, st0ckg, gamma_scalping, hybrid
STRATEGY_MODE=st0cka

# Options: init (start fresh), resume (continue existing)
INITIALIZATION_MODE=init

# --- Database Configuration ---
DATABASE_URL=sqlite:///trading_multi.db
# For PostgreSQL: postgresql://user:password@host:port/dbname
REDIS_URL=redis://localhost:6379

# --- Dashboard ---
PORT=10000
DASHBOARD_ENABLED=true

# --- Logging ---
LOG_LEVEL=INFO

# --- Risk Management ---
MAX_DAILY_LOSS=-500
MAX_CONSECUTIVE_LOSSES=3

# --- Notifications (Optional) ---
DISCORD_WEBHOOK_URL=
TELEGRAM_BOT_TOKEN=
SENTRY_DSN=

# --- Advanced Options ---
USE_VOLATILITY_SIZING=true
USE_MEAN_REVERSION=false
TRACK_PERFORMANCE=true